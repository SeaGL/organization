<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Preview</title>

    <style>
      body {
        margin: 1rem;
      }

      dl,
      h1,
      h2,
      ol,
      p,
      pre,
      ul,
      video {
        margin: 0 0 1rem 0;
      }

      h2 a {
        color: inherit;
        text-decoration: none;
      }

      h2 + .byline {
        margin-top: -1rem;
      }

      article:not(:first-of-type) {
        border-top: 1px solid currentColor;
        padding-top: 1rem;
      }

      dl {
        display :grid;
        grid-template-columns: max-content auto;
      }

      video {
        background-color: #000;
        height: auto;
        max-width: 100%;
      }
    </style>
